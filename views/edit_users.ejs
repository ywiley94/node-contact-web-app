<%- include('layout/header') %>

<div class="container">
    <div class="row">
        <h1>Edit Users Page</h1>
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-success">
                    <h3 class="text-light">Edit User ( <%= user.name %> )</h3>
                </div>
            </div>
            <div class="card-body p-4">
                <form action="/update/<%= user._id%>" method="post" id="add-form" enctype="multipart/form-data">
                    <div class="mb-3">
                      <label for="name">Name</label>
                      <input type="text" name="name" value="<%= user.name %>" class="form-control form-control-lg" placeholder="Enter name" required />
                    </div>
                    <div class="mb-3">
                      <label for="email">Email</label>
                      <input type="email" name="email" value="<%= user.email %>" class="form-control form-control-lg" placeholder="Email" required />
                    </div>
                    <div class="mb-3">
                        <label for="phone">Phone</label>
                        <input type="tel" name="phone" value="<%= user.phone %>" class="form-control form-control-lg" placeholder="Password" required />
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Submit Image</label>
                        <input type="file" name="image" class="form-control form-control-lg" />
                        <img src="/<%= user.image %>" width="100" class="img-thumbnail mt-1" alt="">
                    </div>
                    <input type="hidden" name="old_image" value="<%= user.image %>">
                    <div class="mb-3 d-grid">
                        <input type="submit" name="submit" value="Update User" class="btn btn-success btn-lg"/>
                    </div>
                  </form>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>